@model Forum.Domain.Queries.DTOs.AnswerDTO;

<form id="answerForm" asp-action="AddAnswer" method="post">
	<input type="hidden" asp-for="PostId" />

	<div class="form-group">
		<label asp-for="Content"></label>
		<textarea asp-for="Content" class="form-control" rows="4"></textarea>
		<span asp-validation-for="Content" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary mt-2">Wyślij odpowiedź</button>

	<div id="newAnswerValidationSummary" class="text-danger mb-2"></div>
</form>